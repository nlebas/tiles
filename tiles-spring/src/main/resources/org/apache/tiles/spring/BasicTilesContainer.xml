<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        ">
	<bean name="org.apache.tiles.TilesContainer#Default"
		class="org.apache.tiles.impl.BasicTilesContainer" lazy-init="true" />
	<bean class="org.apache.tiles.locale.impl.DefaultLocaleResolver" lazy-init="true"/>
	<bean class="org.apache.tiles.definition.UnresolvingLocaleDefinitionsFactory" lazy-init="true"/>
	<bean class="org.apache.tiles.definition.dao.ResolvingLocaleUrlDefinitionDAO" lazy-init="true" >
		<constructor-arg><ref bean="tilesContext"/></constructor-arg>
		<property name="sources" value="/WEB-INF/tiles.xml" />
	</bean>
	<bean class="org.apache.tiles.definition.digester.DigesterDefinitionsReader" lazy-init="true" />
	<bean
		name="org.apache.tiles.definition.pattern.wildcard.WildcardDefinitionPatternMatcherFactory#0"
		class="org.apache.tiles.definition.pattern.wildcard.WildcardDefinitionPatternMatcherFactory" 
		lazy-init="true" />
	<bean
		class="org.apache.tiles.definition.pattern.BasicPatternDefinitionResolver" lazy-init="true">
		<constructor-arg index="0"
			ref="org.apache.tiles.definition.pattern.wildcard.WildcardDefinitionPatternMatcherFactory#0" />
		<constructor-arg index="1"
			ref="org.apache.tiles.definition.pattern.wildcard.WildcardDefinitionPatternMatcherFactory#0" />
	</bean>
	<bean class="org.apache.tiles.evaluator.BasicAttributeEvaluatorFactory" lazy-init="true">
		<constructor-arg>
			<bean class="org.apache.tiles.evaluator.impl.DirectAttributeEvaluator" />
		</constructor-arg>
	</bean>
	<bean class="org.apache.tiles.preparer.factory.BasicPreparerFactory" lazy-init="true" />
	<bean name="definition" class="org.apache.tiles.renderer.DefinitionRenderer">
		<constructor-arg ref="org.apache.tiles.TilesContainer#Default"
			index="0" />
	</bean>
	<bean name="template" class="org.apache.tiles.request.render.ChainedDelegateRenderer" />
	<bean name="string" class="org.apache.tiles.request.render.StringRenderer" />
	<bean name="org.apache.tiles.request.render.ChainedDelegateRenderer#Default"
		class="org.apache.tiles.request.render.ChainedDelegateRenderer" />
	<bean name="org.apache.tiles.request.render.BasicRendererFactory#Default"
		class="org.apache.tiles.request.render.BasicRendererFactory" lazy-init="true">
		<property name="defaultRenderer"
			ref="org.apache.tiles.request.render.ChainedDelegateRenderer#Default" />
	</bean>
	<bean class="org.apache.tiles.spring.TilesRegistrationPostProcessor">
		<property name="defaultRendererName"
			value="org.apache.tiles.request.render.ChainedDelegateRenderer#Default" />
	</bean>

</beans>
